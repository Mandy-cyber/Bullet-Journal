<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <AnchorPane prefHeight="600.0" prefWidth="500.0">
   <children>
      <VBox layoutX="10.0" layoutY="64.0" prefHeight="594.0" prefWidth="472.0">
         <children>
            <Label fx:id="taskNameLabel" text="Task Name">
               <font>
                  <Font size="36.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="37.0" prefWidth="461.0">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
               <children>
                  <Label text="Complete:">
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="taskStatus" text="True/False">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <CheckBox fx:id="taskCheckbox" mnemonicParsing="false" text="Mark as Complete">
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </CheckBox>
            <Line endX="360.0" startX="-100.0" stroke="#565656">
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </Line>
            <Label text="Description">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="taskDescriptionLabel" text="TEXT" />
            <VBox fx:id="taskLinkBox" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="taskCloseButton" mnemonicParsing="false" style="-fx-background-color: #f3bac5;" text="Close" textFill="WHITE">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="50.0" />
         </padding>
      </VBox>
   </children></AnchorPane>
</Scene>
