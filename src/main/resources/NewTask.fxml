<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <AnchorPane prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #D3D3D3;">
      <children>
         <VBox layoutY="3.0" prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: white;">
            <children>
               <Label text="CREATE TASK">
                  <font>
                     <Font size="36.0" />
                  </font>
                  <VBox.margin>
                     <Insets bottom="20.0" />
                  </VBox.margin>
               </Label>
               <TextField fx:id="taskNameText" promptText="Task Name:" style="-fx-border-radius: 5; -fx-background-radius: 5;">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </TextField>
               <TextField fx:id="taskWeekDayText" promptText="Day of the Week:" style="-fx-border-radius: 5; -fx-background-radius: 5;">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </TextField>
               <TextArea fx:id="taskDetailsText" prefHeight="200.0" prefWidth="200.0" promptText="Task Details" style="-fx-border-radius: 5; -fx-background-radius: 5;" />
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Button fx:id="cancelButtonTask" mnemonicParsing="false" style="-fx-background-color: #f0f0f0;" text="Cancel" textFill="#909090">
                        <HBox.margin>
                           <Insets right="30.0" />
                        </HBox.margin>
                        <padding>
                           <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                        </padding>
                     </Button>
                     <Button fx:id="addButtonTask" mnemonicParsing="false" style="-fx-background-color: #ffd7ee;" text="Add" textFill="WHITE">
                        <padding>
                           <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                        </padding>
                     </Button>
                  </children>
               </HBox>
            </children>
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="65.0" />
            </padding>
         </VBox>
      </children>
   </AnchorPane>
</Scene>
